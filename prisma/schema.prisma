generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id String @id @default(uuid())

  title        String
  createdAt    DateTime       @default(now())
  dayHabit     DayHabit[]
  habitWeekDay HabitWeekDay[]

  @@map("habits")
}

model HabitWeekDay {
  id String @id @default(uuid())

  habitId String
  weekDay String

  habit Habit @relation(fields: [habitId], references: [id])

  @@unique([habitId, weekDay])
  @@map("habit_week_days")
}

model Day {
  id String @id @default(uuid())

  date     DateTime
  dayHabit DayHabit[]

  @@unique([date])
  @@map("days")
}

model DayHabit {
  id String @id @default(uuid())

  dayId   String
  habitId String

  day   Day   @relation(fields: [dayId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])

  @@unique([dayId, habitId])
  @@map("days_habits")
}
